<form action="/categories/create" method="post" data-parsley-validate>
  
  <div class="row form-group">
	 	<div class="col-md-3 text-md-right">
	    <label for="title">Title</label>
	  </div>
	  <div class="col-md-9">
	  	<input name="title" type="text" class="form-control" autofocus required>
	  </div>
	 </div><!--/.row-->

  <div class="row form-group">
	  <div class="col-md-3 text-md-right">
	    <label for="icon">Icon</label>
	  </div>	
	  <div class="col-md-9">
	  	<input name="icon" type="text" class="form-control">
	  </div>
	</div><!--/.row-->

  <div class="row form-group">
  	<div class="col-md-3 text-md-right">
  	</div>
	  <div class="col-md-9">
		 	<div class="checkbox">
		    <label>
		      <input name="published" type="checkbox" checked> Published?
		    </label>
		  </div>
	  </div> 
 	</div><!--/.row-->	

  <div class="row form-group">
  	<div class="col-md-3 text-md-right">
  	</div>
	  <div class="col-md-9">
		 	<div class="checkbox">
		    <label>
		      <button type="submit" class="btn btn-default btn-primary">Create</button>
		    </label>
		  </div>
	  </div> 
 	</div><!--/.row-->	
 	
	
</form>