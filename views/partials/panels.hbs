{{#article}}

    <div id="side-panels" class="p-3" role="tablist" aria-multiselectable="true">
        <div class="card panel mb-3">
            <div class="card-header" role="tab" id="headingOne">
                <h5 class="mb-0">
                    <a class="text-truncate" data-toggle="collapse" href="#best_practices" aria-expanded="true" aria-controls="best_practices">
                    <i class="fa fa-fw fa-trophy mr-1"></i>Best Practices
                    </a>
                </h5>
            </div>
        <div id="best_practices" class="collapse show" role="tabpanel" aria-labelledby="headingOne">
            <div class="card-block p-4">
              <div class="edit-inline" data-post-url="/articles/update/{{_id}}/best_practices">{{{best_practices}}}</div>
          </div>
        </div>
        </div>
        <div class="card panel mb-3">
          <div class="card-header" role="tab" id="headingTwo">
            <h5 class="mb-0">
              <a class="collapsed text-truncate" data-toggle="collapse" href="#avoid" aria-expanded="true" aria-controls="avoid">
                <i class="fa fa-fw fa-ban mr-1"></i>Avoid
            </a>
        </h5>
        </div>
        <div id="avoid" class="collapse show" role="tabpanel" aria-labelledby="headingTwo">
            <div class="card-block p-4">
              <div class="edit-inline" data-post-url="/articles/update/{{_id}}/avoid">{{{avoid}}}</div>
          </div>
        </div>
        </div>
        <div class="card panel mb-3">
          <div class="card-header" role="tab" id="headingThree">
            <h5 class="mb-0">
              <a class="collapsed text-truncate" data-toggle="collapse" href="#resources" aria-expanded="true" aria-controls="resources">
                <i class="fa fa-fw fa-bookmark mr-1"></i>Resources
            </a>
        </h5>
        </div>
        <div id="resources" class="collapse show" role="tabpanel" aria-labelledby="headingThree">
            <div class="card-block p-4">
              <div class="edit-inline" data-post-url="/articles/update/{{_id}}/resources">{{{resources}}}</div>
          </div>
        </div>
        </div>
    </div>
{{/article}}