{{#article}}
	
	{{> breadcrumbs this }}
	<div class="page-header palette-bg-blue-grey-50 p-1 mb-2">
		<div class="row">
			<div class="col-xs-8">
				<h2 class="display-4">{{title}}</h2>
			</div>
			<div class="col-xs-4">
				<div class="btn-group float-xs-right">
					<a href="/articles/edit/{{_id}}" class="btn btn-secondary"><i class="fa fa-edit"></i><span class="hidden-sm-down"> Edit</span></a>
					<a href="https://hbs-itg.atlassian.net/secure/CreateIssue!default.jspa" class="btn btn-secondary" target="_blank"><i class="fa fa-bug"></i><span class="hidden-sm-down"> Report Bug</span></a>
				</div>
			</div>
		</div>
	</div>

	
	<p class="lead">{{intro}}</p>
	<div>{{{body}}}</div>


	{{{markup}}}
	
	{{#compare _category.title "UI Components"}}

		<h4>Examples</h4>

		<!-- Nav tabs -->
		<ul class="nav nav-tabs" role="tablist">
			<li class="nav-item">
				<a class="nav-link active" data-toggle="tab" href="#xs" role="tab">XS - Mobile (&lt;576px)</a>
			</li>
			<li class="nav-item  hidden-xs-down">
				<a class="nav-link" data-toggle="tab" href="#sm" role="tab">SM - Phablet (≥576px)</a>
			</li>
			<li class="nav-item  hidden-sm-down">
				<a class="nav-link" data-toggle="tab" href="#md" role="tab">MD - Tablet (≥768px)</a>
			</li>
			<li class="nav-item  hidden-md-down">
				<a class="nav-link" data-toggle="tab" href="#lg" role="tab">LG - Laptop (≥992px)</a>
