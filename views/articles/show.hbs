{{#article}}
	
	{{> breadcrumbs this }}
	
	<div class="page-header p-1">
		<div class="row">
			<div class="col-sm-7">
				<h1 class="text-truncated">{{title}}</h1>
			</div>
			<div class="col-sm-5 hidden-sm-down">
				<div class="btn-group float-xs-right">
					 <div class="btn-group btn-group-justified-xs" role="group" aria-label="Justified button group">
					   	<a class="btn btn-secondary" href="/articles/edit/{{_id}}"><i class="fa fa-edit"></i><span class="hidden-lg-down"> Edit</span></a>
					   	<a class="btn btn-secondary" href="https://hbs-itg.atlassian.net/secure/CreateIssue!default.jspa" role="button"><i class="fa fa-bug"></i><span class="hidden-lg-down"> Report Bug</span></a>
					   	<form class="d-inline" action="/articles/destroy/{{_id}}" method="POST">
					   		<button type="submit" class="btn btn-danger confirm-delete"><i class="fa fa-trash"></i><span class="hidden-lg-down"> Delete</span></button>
					   	</form>
					 </div>
				</div>
			</div>
		</div>
		<hr>
	</div>

	<div id="mainbody" class="p-1">

		{{> alerts flash=../flash }}

		<div id="main-panels" role="tablist" aria-multiselectable="true">
		  	
		  	<div class="card panel">
		    	<div class="card-header" role="tab" id="header-one">
		      	<h5 class="mb-0">
		        	<a class="text-truncate" data-toggle="collapse" {{!-- data-parent="#main-panels" --}} href="#description" aria-expanded="true" aria-controls="description">
		          	<i class="fa fa-fw fa-info-circle mr-1"></i>Description
		        	</a>
		      	</h5>
		    </div>

		    <div id="description" class="collapse in" role="tabpanel" aria-labelledby="header-one">
			    <div class="card-block">
			    	<div class="row">
			    		<div class="col-md-9">
			    			<p class="lead"><span class="edit-inline" data-post-url="/articles/update/{{_id}}/intro">{{intro}}</span></p>
			    			<div class="edit-inline" data-post-url="/articles/update/{{_id}}/body">{{{body}}}</div>
			    		</div>
			    		<div class="col-md-3">
								
							<ul class="leaders">
								<li>
									<span>Type</span>
								 	<span class="font-weight-bold">{{type}}</span>
								 </li>
								<li>
									<span>Version</span>
								 	<span class="font-weight-bold">{{version}}</span>
								 </li>
								<li>
									<span>Status</span>
								 	<span class="font-weight-bold">{{status}}</span>
								</li>
							</ul>

			    			<h6 class="mb-1">Tested on</h6>
			    			<div class="row mb-1 text-xs-center">
			    				<div class="col-xs-3"><i class="fa fa-2x fa-chrome text-primary" data-toggle="tooltip" title="9+"></i></div>
			    				<div class="col-xs-3"><i class="fa fa-2x fa-safari text-muted" data-toggle="tooltip" title="Not tested"></i></div>
			    				<div class="col-xs-3"><i class="fa fa-2x fa-firefox text-muted" data-toggle="tooltip" title="Not tested"></i></div>
			    				<div class="col-xs-3"><i class="fa fa-2x fa-internet-explorer text-muted" data-toggle="tooltip" title="Not tested"></i></div>
			    			</div>
			    			<div class="row text-xs-center">
			    				<div class="col-xs-3"><i class="fa fa-2x fa-opera text-muted" data-toggle="tooltip" title="Not tested"></i></div>
			    				<div class="col-xs-3"><i class="fa fa-2x fa-android text-muted" data-toggle="tooltip" title="Not tested"></i></div>
			    				<div class="col-xs-3"><i class="fa fa-2x fa-apple text-muted" data-toggle="tooltip" title="Not tested"></i></div>
			    				<div class="col-xs-3"><i class="fa fa-2x fa-windows text-muted" data-toggle="tooltip" title="Not tested"></i></div>
			    			</div>
			    		</div>
			    	</div>
					
			    </div>
		    </div>
		  </div>

		  
		{{#if markup}}
			<div class="card panel">
			    <div class="card-header" role="tab" id="header-two">
			      <h5 class="mb-0">
			        <a class="collapsed text-truncate" data-toggle="collapse" {{!-- data-parent="#main-panels" --}} href="#examples" aria-expanded="true" aria-controls="examples">
			          <i class="fa fa-fw fa-mouse-pointer mr-1"></i>Examples
			        </a>
			      </h5>
			    </div>
			    <div id="examples" class="collapse in" role="tabpanel" aria-labelledby="header-two">
			      <div class="card-block">

			      
						<!-- Nav tabs -->
					<ul class="nav nav-tabs" role="tablist">
						<li class="nav-item">
							<a class="nav-link active" data-toggle="tab" href="#xs" role="tab">XL - Desktop (≥1200px)</a>
						</li>
						<li class="nav-item  hidden-xs-down">
							<a class="nav-link" data-toggle="tab" href="#sm" role="tab">Other Devices</a>
						</li>		
					</ul> 

					<!-- Tab panes -->
					<div class="tab-content">
						<div class="tab-pane active mt-2" id="xs" role="tabpanel">
							
							{{!-- <div class="row">
				      			<div class="d-block mx-auto palette-bg-white"> --}}
				      				
				      				{{{markup}}}

									{{!-- <div class="device-mockup" data-device="iphone6" data-orientation="portrait" data-color="white">
									    <div class="device">
										<div class="screen palette-bg-white">
										    <iframe src="/articles/mock/{{slug}}/480" height="100%" width="100%" frameborder="0" scrolling="yes">You need an iframes capable browser to view this content.</iframe>
										</div>
										<div class="button">
										    <!-- You can hook the "home button" to some JavaScript events or just remove it -->
										</div>
									    </div>
									</div> --}}

				      			{{!-- </div>
							</div> --}}

						</div>
						<div class="tab-pane  mt-2" id="sm" role="tabpanel">
							

							<div class="btn-group btn-group-justified" role="group" aria-label="Justified button group">
						   		<a class="btn btn-secondary" href="/articles/mock/{{slug}}/480" target="_blank">
						   			<i class="fa fa-fw fa-mobile fa-2x d-block mx-auto"></i>
						   			<span class="hidden-sm-down"> XS - Mobile (&lt;576px)</span>
						   		</a>
						   		<a class="btn btn-secondary" href="/articles/mock/{{slug}}/600" target="_blank">
						   			<i class="fa fa-fw fa-tablet fa-2x d-block mx-auto"></i>
						   			<span class="hidden-sm-down"> SM - Phablet (≥576px)</span>
						   		</a>
						   		<a class="btn btn-secondary" href="/articles/mock/{{slug}}/768" target="_blank">
						   			<i class="fa fa-fw fa-tablet fa-3x d-block mx-auto"></i>
						   			<span class="hidden-sm-down"> MD - Tablet (≥768px)</span>
						   		</a>
						   		<a class="btn btn-secondary" href="/articles/mock/{{slug}}/1024" target="_blank">
						   			<i class="fa fa-fw fa-laptop fa-4x d-block mx-auto"></i>
						   			<span class="hidden-sm-down"> LG - Laptop (≥992px)</span>
						   		</a>
						 	</div>

						</div>

					</div> 

			      </div>
			    </div>
			  </div>
			  <div class="card panel">
			    <div class="card-header" role="tab" id="header-three">
			      <h5 class="mb-0">
			        <a class="collapsed text-truncate" data-toggle="collapse" {{!-- data-parent="#main-panels" --}} href="#markup" aria-expanded="true" aria-controls="markup">
			          <i class="fa fa-fw fa-code mr-1"></i>Markup
			        </a>
			      </h5>
			    </div>
			    <div id="markup" class="collapse in" role="tabpanel" aria-labelledby="header-three">
			      <div class="card-block">
					
					<!-- Nav tabs -->
					<ul class="nav nav-tabs" role="tablist">
					  	{{#if markup}}
						  	<li class="nav-item">
						    	<a class="nav-link active" data-toggle="tab" href="#html_markup" role="tab"><i class="fa fa-fw fa-html5"></i> HTML</a>
						  	</li>
					  	{{/if}}
					  	{{#if js}}
						  	<li class="nav-item">
						    	<a class="nav-link" data-toggle="tab" href="#js" role="tab"><i class="fa fa-fw fa-html5"></i>JavaScript</a>
						  	</li>
					  	{{/if}}
					  	{{#if fiddle}}
						  	<li class="nav-item">
						    	<a class="nav-link" data-toggle="tab" href="#jsfiddle" role="tab"><i class="fa fa-fw fa-html5"></i>JsFiddle</a>
						  	</li>
					  	{{/if}}					  	
					</ul>

					<!-- Tab panes -->
					<div class="tab-content">
					  	{{#if markup}}
					  		<div class="tab-pane active" id="html_markup" role="tabpanel">
					  			<pre class="pre-scrollable"><code class="html">{{markup}}</code></pre>
					  		</div>
					  	{{/if}}	
					  	{{#if js}}
					  		<div class="tab-pane" id="js" role="tabpanel">
					  			<pre class="pre-scrollable"><code class="javascript">{{js}}</code></pre>
					  		</div>
					  	{{/if}}		
					  	{{#if fiddle}}
					  		<div class="tab-pane" id="jsfiddle" role="tabpanel">
					  			<script async src="//jsfiddle.net/HBSAWS/{{fiddle}}/embed/js,html,css,resources,result/dark/"></script>
					  			{{!-- <iframe width="100%" height="300" src="//jsfiddle.net/HBSAWS/{{fiddle}}/embedded/js,html,css,result/dark/" allowfullscreen="allowfullscreen" frameborder="0"></iframe> --}}
					  		</div>
					  	{{/if}}						  	
					</div>
					
			      </div>
			    </div>
			 </div>
		{{/if}}  

		</div>

		
		<div class="helpful-widget" data-article-id="{{_id}}">
			<div class="btn-group btn-group-sm mr-1">
				<button type="button" class="btn btn-secondary yes" data-toggle="tooltip" title="Yes">
					<i class="fa fa-caret-up"></i>
				</button>
				<button type="button" class="btn btn-secondary" disabled data-toggle="tooltip" title="{{#if score}}{{score}} people found this helpful{{else}}Be the first to rate this article{{/if}}">{{#if score}}{{score}}{{else}}0{{/if}}</button>
				<button type="button" class="btn btn-secondary no" data-toggle="tooltip" title="No">
					<i class="fa fa-caret-down"></i>
				</button>
			</div>
			Was this helpful?
		</div>
	</div><!--/#mainbody-->


<div id="mobile-toolbar" class="hidden-md-up">
  	<div class="col-xs-12 palette-bg-teal-500 text-white navbar-fixed-bottom">
  		<div class="row">
    		<div class="col-xs-4 text-xs-center">
    			<a class="btn btn-link" href="/articles/edit/{{_id}}" data-toggle="tooltip" title="Edit"><i class="fa fa-fw fa-2x fa-edit text-white"></i></a>
    		</div>
    		<div class="col-xs-4 text-xs-center">
    			<a class="btn btn-link" href="https://hbs-itg.atlassian.net/secure/CreateIssue!default.jspa" data-toggle="tooltip" title="Report Bug"><i class="fa fa-fw fa-2x fa-bug text-white"></i></a>
    		</div>
    		<div class="col-xs-4 text-xs-center">
    			<form class="d-inline" action="/articles/destroy/{{_id}}" method="POST">
			   		<button type="submit" class="btn btn-link confirm-delete" data-toggle="tooltip" title="Delete"><i class="fa fa-fw fa-2x fa-trash text-white"></i></button>
			   	</form>
    		</div>
  		</div>
  	</div>
</div>

{{/article}}





