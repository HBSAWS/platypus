{{> breadcrumbs null}}
<div class="page-header p-1">
	<div class="row">
		<div class="col-md-7">
			<h1 class="text-truncated">New Content</h1>
		</div>
		<div class="col-md-5">
			<div class="float-xs-right">
				<div class="btn-group btn-group-justified-xs">
					<a href="/articles/edit/{{_id}}" class="btn btn-secondary"><i class="fa fa-edit"></i><span class="hidden-sm-down"> Edit</span></a>
					<a href="https://hbs-itg.atlassian.net/secure/CreateIssue!default.jspa" class="btn btn-secondary" target="_blank"><i class="fa fa-bug"></i><span class="hidden-sm-down"> Report Bug</span></a>
				</div>
			</div>
		</div>
	</div>
	<hr>
</div>

<div id="mainbody" class="m-2">


	<form action="/articles/create" method="post" data-parsley-validate>

		<div class="fuelux">
		    <div class="wizard" data-initialize="wizard" id="myWizard">
		        <div class="steps-container">
		            <ul class="steps" style="margin-left: 0">
		                <li data-step="1" class="active">
		                    <span class="badge badge-info">1</span>Component Details
		                    <span class="chevron"></span>
		                </li>
		                <li data-step="2">
		                    <span class="badge">2</span>Implementation
		                    <span class="chevron"></span>
		                </li>
		                <li data-step="3" data-name="template">
		                    <span class="badge">3</span>User Experience
		                    <span class="chevron"></span>
		                </li>
		            </ul>
		        </div>
		        <div class="step-content">
		            <div class="step-pane p-2 active" data-step="1">
		                <h4>Component Details</h4>

							<div class="row form-group">
								<div class="col-md-4 hidden-sm-down text-xs-right">
									<label for="title">Title</label>
								</div>
								<div class="col-md-8">
									<label class="hidden-md-up d-block" for="title">Title</label>
									<input name="title" type="text" class="form-control" data-parsley-group="block1" autofocus required>
								</div>
							</div><!--/.row-->

							<div class="form-group row">
								<label class="col-md-4 hidden-sm-down text-xs-right" for="status">Status</label>
								<div class="col-md-8">
									<label class="hidden-md-up d-block" for="status">Status</label>
									<select name="status" class="form-control" id="select-single">
										<option value=""></option>
										<option value="experimental">Experimental</option>
										<option value="production">Production</option>
										<option value="deprecated">Deprecated</option>
									</select>
								</div>
							</div><!--/.row-->

							<div class="form-group row">
								<label class="col-md-4 hidden-sm-down text-xs-right" for="type">Type</label>
								<div class="col-md-8">
									<label class="hidden-md-up d-block" for="type">Type</label>
									<select name="type" class="form-control" id="select-single">
										<option value=""></option>
										<option value="core">Core</option>
										<option value="addon">Addon</option>
									</select>
								</div>
							</div><!--/.row-->
							
							<div class="row form-group">
								<div class="col-md-4 hidden-sm-down text-xs-right">
									<label for="_category">Category</label>
								</div>
								<div class="col-md-8">
									<label class="hidden-md-up d-block" for="_category">Category</label>
									<select name="_category" class="form-control select2" data-parsley-group="block1" required>
										{{#categories}}
										<option value="{{_id}}">{{title}}</option>
										{{/categories}}
									</select>
								</div>
							</div><!--/.row-->
							
							<div class="row form-group">
								<div class="col-md-4 hidden-sm-down text-xs-right">
									<label for="intro">Intro</label>
								</div>
								<div class="col-md-8">
									<label class="hidden-md-up d-block" for="intro">Intro</label>
									<input name="intro" type="text" class="form-control">
								</div>
							</div><!--/.row-->	
							
							<div class="row form-group">
								<div class="col-md-4 hidden-sm-down text-xs-right">
									<label for="body">Body</label>
								</div>
								<div class="col-md-8">	
									<label class="hidden-md-up d-block" for="body">Body</label>
									<textarea name="body" class="form-control summernote" data-parsley-group="block1" required></textarea>
								</div>
							</div><!--/.row-->	


							<div class="row form-group">
								<div class="col-md-4 hidden-sm-down text-xs-right">
								</div>
								<div class="col-md-8">
									<label class="custom-control custom-checkbox">
									  <input type="checkbox" class="custom-control-input" checked>
									  <span class="custom-control-indicator"></span>
									  <span class="custom-control-description">Published?</span>
									</label>
								</div>
							</div><!--/.row-->	

		            </div>
		            <div class="step-pane p-2" data-step="2">
		                <h4>Implementation</h4>

							<div class="row form-group">
								<div class="col-md-4 hidden-sm-down text-xs-right">
									<label for="markup">Markup</label>
								</div>
								<div class="col-md-8">
									<label class="hidden-md-up d-block" for="markup">Markup</label>
									<textarea name="markup" class="form-control"></textarea>
								</div>
							</div><!--/.row-->		
							
							<div class="row form-group">
								<div class="col-md-4 hidden-sm-down text-xs-right">
									<label for="js">Javascript</label>
								</div>
								<div class="col-md-8">
									<label class="hidden-md-up d-block" for="js">Javascript</label>
									<input name="js" type="text" class="form-control">
								</div>
							</div><!--/.row-->	

							<div class="row form-group">
								<div class="col-md-4 hidden-sm-down text-xs-right">
									<label for="fiddle">Fiddle</label>
								</div>
								<div class="col-md-8">
									<label class="hidden-md-up d-block" for="fiddle">Fiddle</label>
									<input name="fiddle" type="text" class="form-control">
								</div>
							</div><!--/.row-->	

		            </div>
		            <div class="step-pane p-2" data-step="3">
		                <h4>User Experience</h4>


							<div class="row form-group">
								<div class="col-md-4 hidden-sm-down text-xs-right">
									<label for="best_practices">Best Practices</label>
								</div>
								<div class="col-md-8">
									<label class="hidden-md-up d-block" for="best_practices">Best Practices</label>
									<textarea name="best_practices" class="form-control summernote"></textarea>
								</div>
							</div><!--/.row-->		

							<div class="row form-group">
								<div class="col-md-4 hidden-sm-down text-xs-right">
									<label for="avoid">Avoid</label>
								</div>
								<div class="col-md-8">
									<label class="hidden-md-up d-block" for="avoid">Avoid</label>
									<textarea name="avoid" class="form-control summernote"></textarea>
								</div>
							</div><!--/.row-->	

							<div class="row form-group">
								<div class="col-md-4 hidden-sm-down text-xs-right">
									<label for="resources">Resources</label>
								</div>
								<div class="col-md-8">
									<label class="hidden-md-up d-block" for="resources">Resources</label>
									<textarea name="resources" class="form-control summernote"></textarea>
								</div>
							</div><!--/.row-->		

		            </div>
		            <div class="actions">
		                <!-- <button type="button" class="btn btn-default btn-prev"><span class="fa fa-arrow-circle-left"></span>Prev</button> -->
		                 <button type="button" class="btn btn-labeled btn-default btn-prev" disabled="disabled"><span class="btn-label"><i class="fa fa-arrow-circle-left"></i></span>Previous</button>
		                <!-- <button type="button" class="btn btn-primary btn-next" data-last="Complete">Next <span class="fa fa-arrow-circle-right"></span></button> -->
		                <button type="button" class="btn btn-labeled btn-primary btn-next" data-last="Complete">Next<span class="btn-label btn-label-right"><i class="fa fa-arrow-circle-right"></i></span></button>
		            </div>
		        </div>
		    </div>
		</div>

		{{!-- 
		<div class="row form-group">
			<div class="col-md-4 hidden-sm-down text-xs-right">
			</div>
			<div class="col-md-8">
				<div class="checkbox">
					<label>
					<button type="submit" class="btn btn-default btn-primary">Create</button>
					</label>
				</div>
			</div>
		</div><!--/.row-->	 
		--}}

	</form>
</div><!--/#mainbody-->	
